{
  "name": "security-testing-demo",
  "version": "1.0.0",
  "description": "A vulnerable web application for demonstrating security testing skills",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:run": "rm -rf allure-results && playwright test --project=api --project=chromium --project=ml-anomaly",
    "test": "npm run test:run && node check-java-allure.js \"npx allure generate allure-results --clean -o allure-report\"",
    "test:api": "playwright test test/api --project=api",
    "test:e2e": "playwright test test/e2e --project=chromium",
    "test:ml-anomaly": "playwright test test/ml-anomaly --project=ml-anomaly",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed --project=chromium",
    "test:debug": "playwright test --debug --project=chromium",
    "test:secure": "cross-env SECURE_MODE=1 npm test",
    "test:vuln": "cross-env RUN_VULN_TESTS=1 npm test",
    "test:zap": "npx playwright test test/e2e/zap_*.spec.ts --project=chromium",
    "test:all": "npm test",
    "test:comprehensive": "playwright test --project=api --project=chromium --project=ml-anomaly",
    "test:report": "npx playwright show-report",
    "test:allure": "npm test",
    "allure:generate": "node check-java-allure.js \"npx allure generate allure-results --clean -o allure-report\"",
    "test:allure-open": "node check-java-allure.js \"npx allure open allure-report\"",
    "test:allure-serve": "node check-java-allure.js \"npx allure serve allure-results\"",
    "test:allure-simple": "node generate-simple-report.js",
    "test:complete-report": "rm -rf allure-results allure-report-complete && npm run test:run && node generate-complete-report.js",
    "report:fresh": "bash generate-fresh-report.sh",
    "test:dashboard": "node generate-test-dashboard.js"
  },
  "keywords": [
    "security",
    "owasp",
    "penetration-testing",
    "vulnerabilities"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.30",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^2.15.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "typescript": "^5.0.0"
  }
}
